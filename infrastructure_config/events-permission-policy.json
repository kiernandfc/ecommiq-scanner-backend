{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecs:RunTask"
      ],
      "Resource": [
        "arn:aws:ecs:us-east-1:387663585850:task-definition/ecommiq-scanner:*"
      ],
      "Condition": {
        "ArnLike": {
          "ecs:cluster": "arn:aws:ecs:us-east-1:387663585850:cluster/ecommiq-cluster"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::387663585850:role/ecsTaskExecutionRole",
        "arn:aws:iam::387663585850:role/ecsTaskRole"
      ]
    }
  ]
}
