{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ecs:DescribeTasks",
                "ecs:ListTasks"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:GetLogEvents",
                "logs:DescribeLogStreams",
                "logs:DescribeLogGroups"
            ],
            "Resource": [
                "arn:aws:logs:us-east-1:387663585850:log-group:/ecs/ecommiq-scanner:*",
                "arn:aws:logs:us-east-1:387663585850:log-group:/ecs/ecommiq-scanner:log-stream:*"
            ]
        }
    ]
}
